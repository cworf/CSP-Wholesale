<div class="festi-menu">
    <ul class="festi-menu-nav festi-menu-nav-tabs">
    <?php
    
    foreach ($this->_menuOptions as $ident => $caption) {
        $params = array(
            'tab' => $ident,
            'refresh_completed' => '',
            'refresh_plugin' => '',
            'delete_role' => '',
            'action' => ''
        );
        $url = $this->getUrl($params);
        
        $selectTab = '';
        
        if ($this->hasOptionPageInRequest()) {
            if ($_GET['tab'] == $ident) {
                $selectTab = 'class="festi-menu-active"';
            }
             
        } else if ($ident == $this->_defaultMenuOption) {
            $selectTab = 'class="festi-menu-active"';
        }
    ?>   
        <li  <?php echo $selectTab;?>>
            <a href="<?php echo $url; ?>" data-toggle="tab">
                <?php echo __($caption, $this->_languageDomain); ?>
            </a>
        </li>
    <?php
    }
    ?>   
    </ul>
</div>